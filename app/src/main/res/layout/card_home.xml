<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="353dp"
    android:layout_height="102dp"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="34dp"
    card_view:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">


        <TextView
            android:id="@+id/cardhome_textView_title"
            android:layout_width="186dp"
            android:layout_height="60dp"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"
            android:layout_marginBottom="27dp"
            android:fontFamily="@font/merriweather_bold"
            android:text="Netherlands says Omicron variant was already in country earlier than previously thought"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cardhome_textView_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Health"
            android:textColor="#FFFF"
            android:textSize="6dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/cardhome_textView_title" />

        <TextView
            android:id="@+id/cardhome_textView_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppins_medium"
            android:text="10 Mins Ago"
            android:textColor="#FFFF"
            android:textSize="6dp"
            card_view:layout_constraintStart_toEndOf="@+id/cardhome_textView_titik"
            card_view:layout_constraintTop_toBottomOf="@+id/cardhome_textView_title" />

        <TextView
            android:id="@+id/cardhome_textView_titik"
            android:layout_width="1dp"
            android:layout_height="9dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppins_medium"
            android:text="."
            android:textColor="#FFFFFF"
            android:textSize="6dp"
            card_view:layout_constraintStart_toEndOf="@+id/cardhome_textView_category"
            card_view:layout_constraintTop_toBottomOf="@+id/cardhome_textView_title" />

        <ImageView
            android:id="@+id/cardhome_imageView_image"
            android:layout_width="82dp"
            android:layout_height="72dp"
            android:layout_marginStart="63dp"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/cardview_photo"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/cardhome_textView_title"
            card_view:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>